{
  "name": "udacity-storefront",
  "version": "1.0.0",
  "description": "It is a simple server side application provide APIs to manage, interact with online store using tech stack nodejs, postgres, and express.",
  "main": "index.js",
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "postinstall": "run-s install:**",
    "install:server": "cd ./server && npm i",
    "install:client": "cd ./client && npm i",
    "start": "run-p start:**",
    "start:server": "cd ./server && npm start",
    "start:client": "cd ./client && npm start",
    "prettier": "run-s prettier:**",
    "prettier:server": "cd ./server && npm run prettier",
    "prettier:client": "cd ./client && npm run prettier",
    "lint": "run-s lint:**",
    "lint:server": "cd ./server && npm run lint",
    "lint:client": "cd ./client && npm run lint",
    "test": "run-s test:**",
    "test:server": "cd ./server && npm run test:windows",
    "test:client": "cd ./client && npm run test -- --watchAll=false",
    "build": "run-s build:**",
    "build:server": "cd ./server && npm run build",
    "build:client": "cd ./client && npm run build",
    "deploy": "run-p deploy:**",
    "deploy:server": "chmod +x bin/deploy-server.sh && bin/deploy-server.sh",
    "deploy:client": "chmod +x bin/deploy-client.sh && bin/deploy-client.sh"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/IMM9O/udacity-storefront.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/IMM9O/udacity-storefront/issues"
  },
  "homepage": "https://github.com/IMM9O/udacity-storefront#readme",
  "dependencies": {
    "npm-run-all": "^4.1.5"
  }
}
